<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fecoder.controllers.PackagingController">

    <top>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="DANH SÁCH BAO BÌ">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </HBox>
            <padding>
                <Insets bottom="20" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox prefHeight="668.0" prefWidth="261.0" spacing="10">
            <HBox prefWidth="340" spacing="10">
                <VBox spacing="14">
                    <Label text="Tên">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Qui cách">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Kích thước">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Loại">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Nhà in">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Tối thiểu">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="In sẵn">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Mã bao bì">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Thùng chính">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Đơn giá">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Tồn kho">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Lưu ý">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox prefHeight="334.0" prefWidth="153.0" spacing="10">
                    <TextField fx:id="nameField" />
                    <TextField fx:id="specificationField" />
                    <TextField fx:id="dimensionField" />
                    <ComboBox fx:id="typeComboBox" prefHeight="26.0" prefWidth="156.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Chưa chọn" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Chưa chọn" />
                        </value>
                    </ComboBox>
                    <ComboBox fx:id="suplierComboBox" prefHeight="26.0" prefWidth="163.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Chưa chọn" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Chưa chọn" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="minimumField" />
                    <CheckBox fx:id="stampedField" />
                    <TextField fx:id="codeField" />
                    <CheckBox fx:id="mainField" />
                    <TextField fx:id="priceField" />
                    <TextField fx:id="stockField" />
                    <TextField fx:id="noteField" />
                </VBox>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertButton" prefHeight="30.0" prefWidth="60.0" text="THÊM" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButton" prefHeight="30.0" prefWidth="80.0" text="CẬP NHẬT" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButton" prefHeight="30.0" prefWidth="60.0" text="CLEAR" />
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <HBox prefWidth="790" spacing="10">
                <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
                    <Label text="Tìm theo">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="searchComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Mã" />
                                <String fx:value="Tên" />
                                <String fx:value="Kích thước" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Mã" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="searchField" />
                </HBox>
                <HBox alignment="BASELINE_RIGHT" prefWidth="290" spacing="10">
                    <Button id="reloadData" fx:id="reloadData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#reloadData" text="TẢI LẠI TRANG" />
                </HBox>
            </HBox>
            <ScrollPane prefHeight="655.0" prefWidth="770.0">
                <TableView fx:id="dataTable" editable="true" maxWidth="1.7976931348623157E308" prefHeight="652.0" prefWidth="1442.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="STT" />
                        <TableColumn fx:id="stampedColumn" prefWidth="70.0" text="In sẵn" />
                        <TableColumn fx:id="mainColumn" prefWidth="100.0" text="Bao gói chính" />
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Tên bao bì" />
                        <TableColumn fx:id="specificationColumn" prefWidth="200.0" text="Qui cách" />
                        <TableColumn fx:id="dimensionColumn" prefWidth="150.0" text="Kích thước" />
                        <TableColumn fx:id="minimumColumn" prefWidth="150.0" text="Đặt tối thiểu" />
                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Loại bao bì" />
                        <TableColumn fx:id="suplierColumn" prefWidth="70.0" text="Nhà cung cấp" />
                        <TableColumn fx:id="codeColumn" prefWidth="70.0" text="Mã bao bì" />
                        <TableColumn fx:id="stockColumn" prefWidth="70.0" text="Tồn kho" />
                        <TableColumn fx:id="priceColumn" prefWidth="70.0" text="Đơn giá" />
                        <TableColumn fx:id="noteColumn" prefWidth="200.0" text="Lưu ý" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="anchorLabel">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="anchorData">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
