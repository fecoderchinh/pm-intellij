                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Tên bao bì" />
                                    <String fx:value="Kích thước" />
                                </FXCollections>
                            </items>
                            <value>
                                <String fx:value="Tên bao bì" />
                            </value>
                        </ComboBox>
                        <TextField fx:id="searchField" promptText="Nhập từ khóa cần tìm" />
