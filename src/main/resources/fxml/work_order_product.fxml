<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fecoder.controllers.WorkOrderProductController">

    <top>
        <HBox maxHeight="-Infinity" prefHeight="207.0" prefWidth="1004.0">
            <VBox prefHeight="212.0" prefWidth="556.0" spacing="10">
                <HBox spacing="10">
                    <Label fx:id="mainLabel" text="THÔNG TIN MẶT HÀNG">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </HBox>
                <Separator prefWidth="200.0" />
                <HBox spacing="10">
                    <VBox prefHeight="139.0" prefWidth="523.0" spacing="10">
                        <HBox spacing="10">
                            <TextField fx:id="ordinalNumberField" prefHeight="26.0" prefWidth="294.0" promptText="Thứ tự mặt hàng" />
                            <TextField fx:id="qtyField" prefHeight="26.0" prefWidth="260.0" promptText="Số lượng" />
                        </HBox>
                        <HBox spacing="10">
                            <ComboBox fx:id="productComboBox" prefHeight="26.0" prefWidth="582.0">
                                <items>
                                    <FXCollections fx:factory="observableArrayList" />
                                </items>
                            </ComboBox>
                        </HBox>
                        <HBox spacing="10">
                            <TextField fx:id="noteField" prefHeight="26.0" prefWidth="578.0" promptText="Ghi chú" />
                        </HBox>
                        <HBox spacing="10">
                            <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertButton" prefHeight="30.0" prefWidth="60.0" text="THÊM" />
                            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButton" prefHeight="30.0" prefWidth="80.0" text="CẬP NHẬT" />
                            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButton" prefHeight="30.0" prefWidth="89.0" text="XÓA Ô" />
                            <padding>
                                <Insets top="5" />
                            </padding>
                        </HBox>
                    </VBox>
                </HBox>
                <padding>
                    <Insets bottom="20" />
                </padding>
            </VBox>
            <TableView fx:id="productTableView" maxHeight="-Infinity" prefHeight="204.0" prefWidth="452.0">
                <columns>
                    <TableColumn fx:id="productIdColumn" prefWidth="35.0" text="STT" />
                    <TableColumn fx:id="productNameColumn" prefWidth="320.0" text="Tên mặt hàng" />
                    <TableColumn fx:id="productQuantityColumn" prefWidth="80.0" text="Số lượng" />
                </columns>
            </TableView>
        </HBox>
    </top>

    <center>
        <VBox prefHeight="668.0" prefWidth="693.0" spacing="10">
            <Separator prefWidth="200.0" />
            <HBox prefWidth="790" spacing="10">
                <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
                    <Label text="Tìm theo">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="searchComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Tên bao bì" />
                                <String fx:value="Kích thước" />
                                <String fx:value="NCC" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Tên bao bì" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="searchField" promptText="Nhập từ khóa cần tìm" />
                </HBox>
                <HBox alignment="BASELINE_RIGHT" prefHeight="26.0" prefWidth="494.0" spacing="10">
                    <Button id="exportData" fx:id="exportData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#exportData" text="XUẤT PHIẾU" />
                    <Button id="reloadData" fx:id="reloadData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#reloadData" text="TẢI LẠI TRANG" />
                </HBox>
            </HBox>
            <TreeTableView fx:id="dataTable" maxWidth="1.7976931348623157E308" prefHeight="652.0" prefWidth="1500.0" />
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="anchorLabel">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="anchorData">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
