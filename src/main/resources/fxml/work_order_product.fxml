<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fecoder.controllers.WorkOrderProductController">

    <top>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="mainLabel" text="THÔNG TIN MẶT HÀNG">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </HBox>
            <padding>
                <Insets bottom="20" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox prefHeight="668.0" prefWidth="289.0" spacing="10">
            <HBox prefWidth="340" spacing="10">
                <VBox spacing="14">
                    <Label text="Mặt hàng số:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Tên mặt hàng">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Số lượng thùng">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox prefHeight="4.0" prefWidth="154.0" spacing="10">
                    <TextField fx:id="ordinalNumberField" />
                    <ComboBox fx:id="productComboBox" prefHeight="26.0" prefWidth="355.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList" />
                        </items>
                    </ComboBox>
                    <TextField fx:id="qtyField" />
                </VBox>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertButton" prefHeight="30.0" prefWidth="60.0" text="THÊM" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButton" prefHeight="30.0" prefWidth="80.0" text="CẬP NHẬT" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButton" prefHeight="30.0" prefWidth="89.0" text="CLEAR" />
            </HBox>
         <ScrollPane prefHeight="520.0" prefWidth="230.0">
           <content>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="516.0" prefWidth="276.0">
                  <children>
                     <TableView fx:id="productTableView" prefHeight="516.0" prefWidth="278.0">
                       <columns>
                         <TableColumn prefWidth="50.0" fx:id="productIdColumn" text="STT" />
                         <TableColumn prefWidth="228.0" fx:id="productNameColumn" text="Tên mặt hàng" />
                       </columns>
                     </TableView>
                  </children>
               </AnchorPane>
           </content>
         </ScrollPane>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="668.0" prefWidth="693.0" spacing="10">
            <HBox prefWidth="790" spacing="10">
                <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
                    <Label text="Tìm theo">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="searchComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Tên bao bì" />
                                <String fx:value="Kích thước" />
                                <String fx:value="NCC" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Tên bao bì" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="searchField" />
                </HBox>
                <HBox alignment="BASELINE_RIGHT" prefWidth="290" spacing="10">
                    <Button id="reloadData" onAction="#reloadData" fx:id="reloadData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" text="TẢI LẠI TRANG" />
                </HBox>
            </HBox>
            <ScrollPane prefHeight="655.0" prefWidth="770.0">
                <TableView fx:id="dataTable" editable="true" maxWidth="1.7976931348623157E308" prefHeight="652.0" prefWidth="1500.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="STT" />
                        <TableColumn fx:id="packagingNameColumn" prefWidth="150.0" text="Tên bao bì" />
                        <TableColumn fx:id="packagingSpecificationColumn" prefWidth="150.0" text="Qui cách" />
                        <TableColumn fx:id="packagingDimensionColumn" prefWidth="70.0" text="Kích thước" />
                        <TableColumn fx:id="packagingSuplierColumn" prefWidth="70.0" text="NCC" />
                        <TableColumn fx:id="packagingCodeColumn" prefWidth="70.0" text="Mã BB" />
                        <TableColumn fx:id="unitColumn" prefWidth="70.0" text="ĐVT" />
                        <TableColumn fx:id="printStatusColumn" prefWidth="70.0" text="In sẵn" />
                        <TableColumn fx:id="packQuantityColumn" prefWidth="70.0" text="Đóng gói /thùng" />
                        <TableColumn fx:id="workOrderQuantityColumn" prefWidth="200.0" text="SL cần" />
                        <TableColumn fx:id="stockColumn" prefWidth="200.0" text="SL Tồn" />
                        <TableColumn fx:id="actualQuantityColumn" prefWidth="200.0" text="SL Đặt" />
                        <TableColumn fx:id="residualQuantityColumn" prefWidth="200.0" text="Hao hụt" />
                        <TableColumn fx:id="totalResidualQuantityColumn" prefWidth="200.0" text="Tổng đặt" />
                        <TableColumn fx:id="noteProductColumn" prefWidth="200.0" text="Lưu ý" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="anchorLabel">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="anchorData">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
