                        <Label text="Chọn lần đặt">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="orderTimesComboBox" prefHeight="26.0" prefWidth="106.0">
                            <items>
                                <FXCollections fx:factory="observableArrayList" />
                            </items>
