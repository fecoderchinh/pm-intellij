                <TableView fx:id="supplierShipToAddressTableView" maxHeight="-Infinity" prefHeight="144.0" prefWidth="450.0">
                    <columns>
                        <TableColumn fx:id="ss2aIdColumn" prefWidth="35.0" text="STT" />
