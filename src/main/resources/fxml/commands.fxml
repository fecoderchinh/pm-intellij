<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fecoder.controllers.CommandController">

    <top>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="QUẢN LÝ LỆNH SẢN XUẤT">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </HBox>
            <padding>
                <Insets bottom="20" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox prefHeight="668.0" prefWidth="284.0" spacing="10">
            <HBox prefWidth="340" spacing="10">
                <VBox spacing="14">
                    <Label text="Lệnh">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Số LOT">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Số PO">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Năm phát hành">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Khách hàng">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Ngày gửi lệnh">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Ngày xuất hàng">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Cảng đến">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Ghi chú">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox prefHeight="4.0" prefWidth="154.0" spacing="10">
                    <TextField fx:id="commandName" />
                    <TextField fx:id="commandLotNumber" />
                    <TextField fx:id="commandPONumber" />
                    <ComboBox fx:id="commandYear" prefHeight="26.0" prefWidth="184.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList"/>
                        </items>
                    </ComboBox>
                    <ComboBox fx:id="commandCustomer" prefHeight="26.0" prefWidth="355.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList"/>
                        </items>
                    </ComboBox>
                    <DatePicker fx:id="commandSendDate" prefHeight="26.0" prefWidth="355.0"/>
                    <DatePicker fx:id="commandShippingDate" prefHeight="26.0" prefWidth="355.0"/>
                    <TextField fx:id="commandDestination" />
                    <TextField fx:id="commandNote" />
                </VBox>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertButton" prefHeight="30.0" prefWidth="60.0" text="THÊM" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButton" prefHeight="30.0" prefWidth="80.0" text="CẬP NHẬT" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButton" prefHeight="30.0" prefWidth="89.0" text="CLEAR" />
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <HBox prefWidth="790" spacing="10">
                <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
                    <Label text="Tìm theo">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="searchComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Số lệnh" />
                                <String fx:value="Số Lot" />
                                <String fx:value="Số PO" />
                                <String fx:value="Khách" />
                                <String fx:value="Cảng" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Số lệnh" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="searchField" />
                </HBox>
                <HBox alignment="BASELINE_RIGHT" prefWidth="290" spacing="10">
                    <Button id="reloadData" fx:id="reloadData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#reloadData" text="TẢI LẠI TRANG" />
                </HBox>
            </HBox>
            <ScrollPane prefHeight="655.0" prefWidth="770.0">
                <TableView fx:id="dataTable" editable="true" maxWidth="1.7976931348623157E308" prefHeight="652.0" prefWidth="1350.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="STT" />
                        <TableColumn fx:id="commandSendDateColumn" prefWidth="150.0" text="Ngày gửi" />
                        <TableColumn fx:id="commandNumberColumn" prefWidth="100.0" text="Số lệnh" />
                        <TableColumn fx:id="commandLotColumn" prefWidth="100.0" text="Số LOT" />
                        <TableColumn fx:id="commandPOColumn" prefWidth="100.0" text="Số PO" />
                        <TableColumn fx:id="commandYearColumn" prefWidth="100.0" text="Năm phát hành" />
                        <TableColumn fx:id="commandCustomerColumn" prefWidth="200.0" text="Khách hàng" />
                        <TableColumn fx:id="commandShippingDateColumn" prefWidth="150.0" text="Ngày xuất" />
                        <TableColumn fx:id="commandDestinationColumn" prefWidth="200.0" text="Cảng đến" />
                        <TableColumn fx:id="commandNoteColumn" prefWidth="200.0" text="Ghi chú" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="anchorLabel">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="anchorData">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
