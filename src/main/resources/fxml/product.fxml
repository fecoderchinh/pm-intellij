<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fecoder.controllers.ProductController">

    <top>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="QUẢN LÝ DANH SÁCH MẶT HÀNG">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </HBox>
            <padding>
                <Insets bottom="20" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox prefHeight="340.0" prefWidth="261.0" spacing="10">
            <HBox prefWidth="340" spacing="10">
                <VBox spacing="14">
                    <Label text="Tên mặt hàng">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Mô tả">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Qui cách">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="Ghi chú">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox prefHeight="4.0" prefWidth="154.0" spacing="10">
                    <TextField fx:id="nameField" />
                    <TextField fx:id="descriptionField" />
                    <TextField fx:id="specificationField" />
                    <TextField fx:id="noteField" />
                </VBox>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertButton" prefHeight="30.0" prefWidth="60.0" text="THÊM" />
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButton" prefHeight="30.0" prefWidth="80.0" text="CẬP NHẬT" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButton" prefHeight="30.0" prefWidth="89.0" text="CLEAR" />
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox spacing="10">
            <HBox prefWidth="790" spacing="10">
                <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
                    <Label text="Tìm theo">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="searchComboBox">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Tên mặt hàng" />
                                <String fx:value="Mô tả" />
                                <String fx:value="Qui cách" />
                            </FXCollections>
                        </items>
                        <value>
                            <String fx:value="Tên mặt hàng" />
                        </value>
                    </ComboBox>
                    <TextField fx:id="searchField" />
                </HBox>
                <HBox alignment="BASELINE_RIGHT" prefWidth="290" spacing="10">
                    <Button id="reloadData" fx:id="reloadData" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#reloadData" text="TẢI LẠI TRANG" />
                </HBox>
            </HBox>
            <ScrollPane prefHeight="655.0" prefWidth="770.0">
                <TableView fx:id="dataTable" editable="true" maxWidth="1.7976931348623157E308" prefHeight="652.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="STT" />
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Tên mặt hàng" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Mô tả" />
                        <TableColumn fx:id="specificationColumn" prefWidth="250.0" text="Qui cách" />
                        <TableColumn fx:id="noteColumn" prefWidth="250.0" text="Lưu ý" />
                    </columns>
                </TableView>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label fx:id="anchorLabel">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="anchorData">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


</BorderPane>
